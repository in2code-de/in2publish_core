{
	"name": "in2code/in2publish_core",
	"description": "Content publishing extension to connect stage and production server",
	"keywords": [
		"TYPO3 CMS",
		"publishing",
		"publisher",
		"stage",
		"content",
		"multiserver",
		"workflow",
		"workspace",
		"security",
		"publish",
		"synchronization",
		"stage",
		"staging",
		"contentstaging",
		"headless",
		"bodyless",
		"deployment"
	],
	"authors": [
		{
			"name": "Oliver Eglseder",
			"email": "oliver.eglseder@in2code.de"
		},
		{
			"name": "Alex Kellner",
			"email": "alexander.kellner@in2code.de"
		}
	],
	"type": "typo3-cms-extension",
	"license": "GPL-3.0-or-later",
	"require": {
		"php": ">=5.5",
		"typo3/cms": ">=7.6.0 <9.0.0, !=8.3.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^4.8",
		"squizlabs/php_codesniffer": "^2.7",
		"phpmd/phpmd": "^2.4",
		"sebastian/phpcpd": "^2.0"
	},
	"suggest": {
		"vertexvaar/logs": "Require version ^1.3. Replaces the internal log reader with a better version which has more filters and options"
	},
	"autoload": {
		"psr-4": {
			"In2code\\In2publishCore\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"In2code\\In2publishCore\\Tests\\": "Tests",
			"TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
			"TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
		}
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/Web/typo3conf/ext/",
			"[ -L .Build/Web/typo3conf/ext/in2publish_core ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/in2publish_core"
		],
		"quality-check" : [
			".Build/bin/phpcpd Classes/ --min-tokens=42",
			".Build/bin/phpcs Classes/ --standard=PSR2",
			".Build/bin/phpmd Classes/ text controversial",
			".Build/bin/phpmd Classes/ text design",
			".Build/bin/phpmd Classes/ text unusedcode",
			".Build/bin/phpmd Classes/ text naming",
			"TYPO3_PATH_WEB=.Build/Web .Build/bin/phpunit -c phpunit.xml.dist"
		]
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web"
		},
		"branch-alias": {
			"dev-master": "7.0.x-dev"
		}
	}
}
