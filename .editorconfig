root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true

[*.css]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab
indent_size = 4

[*.json]
indent_style = tab
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.t3s]
indent_style = space
indent_size = 2

[*.xlf]
indent_style = tab
indent_size = 4

[*.sql]
indent_style = tab
indent_size = 2
